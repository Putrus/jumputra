{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "cmake",
            "args": [
                "--build",
                "build",
                "-j",
                "12"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}/build"]
            }
        },
        {
            "label": "run unit tests",
            "type": "shell",
            "command": "ctest",
            "args": [
                "--test-dir",
                "build/ut",
                "--output-on-failure",
                "-j",
                "12"
            ]
        }
    ]
}
